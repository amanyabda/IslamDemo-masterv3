<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fondramadan1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="67dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/a1"
            android:layout_width="430dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/tex1"
            android:textSize="30dp"
            android:textColor="#E65100"
            android:gravity="center_horizontal"
            android:text="تهنئة برمضان"
            android:layout_marginTop="35dp"
            android:background="@drawable/one_prayer_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tex2"
            android:textSize="30dp"
            android:textColor="#E65100"
            android:gravity="center_horizontal"
            android:text="تهنئة بالافطار"
            android:layout_marginTop="35dp"
            android:background="@drawable/one_prayer_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tex3"
            android:textSize="30dp"
            android:textColor="#E65100"
            android:gravity="center_horizontal"
            android:text="تهنئة ب عيد الفطر"
            android:layout_marginTop="35dp"
            android:background="@drawable/one_prayer_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/av_bottom_banner"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>




</ScrollView>